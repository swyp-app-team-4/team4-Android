<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/icon_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_alert"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/icon_broadcast"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_broadcast"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역 소식"
            android:fontFamily="@font/pretend_semibold"
            android:textColor="#0F0F10"
            android:textSize="17sp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@id/icon_broadcast"
            app:layout_constraintStart_toEndOf="@id/icon_broadcast" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerRegionNews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/text_broadcast"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/dotsIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:dotsSize="6dp"
            app:dotsColor="@color/gray_scale_4"
            app:selectedDotColor="@color/gray_scale_9"
            app:layout_constraintTop_toBottomOf="@id/viewPagerRegionNews"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/text_less_boom_bim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/pretend_semibold"
            android:text="지금 여기가 덜 붐벼요!"
            android:textColor="@color/gray_scale_10"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dotsIndicator" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_less_boom_bim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/text_less_boom_bim"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/text_interest_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관심장소"
            android:fontFamily="@font/pretend_semibold"
            android:textSize="18sp"
            android:textColor="@color/gray_scale_10"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler_less_boom_bim" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_interest_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/text_interest_place"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/text_boom_bim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금 붐비는 장소 TOP 5"
            android:fontFamily="@font/pretend_semibold"
            android:textSize="18sp"
            android:textColor="@color/gray_scale_10"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler_interest_place" />

        <ImageView
            android:id="@+id/icon_refresh_boom_bim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_refresh"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="@id/text_boom_bim"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_boom_bim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/text_boom_bim"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
