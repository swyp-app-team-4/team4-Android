<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/icon_ring"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_ring"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="붐빔알림 붐빔알림 붐빔알림 붐빔알림"
        android:textSize="14sp"
        android:fontFamily="@font/pretend_medium"
        android:textColor="@color/gray_scale_9"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/icon_ring"
        app:layout_constraintStart_toEndOf="@id/icon_ring"/>

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025.7.15"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/pretend_regular"
        android:textColor="@color/gray_scale_8"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/text_content"
        app:layout_constraintStart_toEndOf="@id/icon_ring"/>



</androidx.constraintlayout.widget.ConstraintLayout>